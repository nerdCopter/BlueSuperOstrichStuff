{
  "name": "emu-configurator",
  "productName": "EmuFlight Configurator",
  "description": "Crossplatform configuration tool for EmuFlight flight control system.",
  "version": "0.9.9",
  "main": "main.html",
  "chromium-args": "--disable-features=nw2",
  "scripts": {
    "start": "run-script-os",
    "start:default": "NODE_ENV=development NW_PRE_ARGS=--load-extension='./node_modules/nw-vue-devtools-prebuilt/extension' gulp debug",
    "start:windows": "set NODE_ENV=development && set NW_PRE_ARGS=--load-extension='./node_modules/nw-vue-devtools-prebuilt/extension' && gulp debug",
    "gulp": "gulp",
    "release": "run-script-os",
    "release:default": "NODE_ENV=production gulp release",
    "release:windows": "set NODE_ENV=production&& gulp release",
    "pretest": "yarn run lint",
    "test": "karma start test/karma.conf.js",
    "lint": "eslint --ext .js,.vue src gulpfile.js gulp-appdmg.js",
    "lint:fix": "eslint --fix src gulpfile.js gulp-appdmg.js",
    "storybook": "start-storybook -p 6006"
  },
  "window": {
    "icon": "images/ef_icon_128.png",
    "id": "main-window",
    "min_width": 1024,
    "min_height": 550,
    "title": "EmuFlight Configurator"
  },
  "repository": {
    "type": "git",
    "url": "github.com/emuflight/EmuConfigurator"
  },
  "webview": {
    "partitions": [
      {
        "name": "map",
        "accessible_resources": [
          "tabs/map.html",
          "js/tabs/map.js",
          "/js/libraries/openlayers/ol.css",
          "/js/libraries/openlayers/ol.js",
          "/images/icons/cf_icon_position.png",
          "/images/icons/cf_icon_position_nofix.png"
        ]
      }
    ]
  },
  "author": "The EmuFlight open source project.",
  "license": "GPL-3.0",
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@panter/vue-i18next": "^0.15.2",
    "bluebird": "^3.7.2",
    "djv": "^2.1.4",
    "dompurify": "^2.3.6",
    "i18next": "^19.0.0",
    "i18next-xhr-backend": "^3.2.2",
    "inflection": "^1.12.0",
    "jbox": "^1.0.8",
    "jquery": "^3.5.1",
    "jquery-textcomplete": "^1.8.5",
    "jquery-touchswipe": "^1.6.19",
    "jquery-ui-npm": "^1.12.0",
    "lru_map": "^0.3.3",
    "marked": "^4.0.10",
    "multiple-select": "^1.5.2",
    "nw-vue-devtools-prebuilt": "^0.0.10",
    "object-hash": "^2.0.3",
    "select2": "^4.0.13",
    "semver-min": "^0.6.5",
    "short-unique-id": "^1.1.1",
    "switchery-latest": "^0.8.2",
    "three": "~0.97.0",
    "universal-ga": "^1.2.0",
    "vue": "2.6.12"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@quanle94/innosetup": "^6.0.2",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/vue": "^6.4.22",
    "babel-loader": "^8.2.4",
    "browserify": "^17.0.0",
    "chai": "^4.2.0",
    "command-exists": "^1.2.8",
    "cordova-lib": "^10.0.0",
    "del": "^5.0.0",
    "eslint": "^7.16.0",
    "eslint-plugin-vue": "^7.3.0",
    "follow-redirects": "^1.14.8",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulp-concat": "~2.6.1",
    "gulp-debian": "^0.1.9",
    "gulp-json-editor": "^2.5.4",
    "gulp-prompt": "^1.2.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-util": "^3.0.8",
    "gulp-xml-transformer": "^5.1.1",
    "gulp-yarn": "^3.0.0",
    "gulp-zip": "^5.0.0",
    "husky": "^4.3.0",
    "karma": "^6.3.16",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-junit-reporter": "^2.0.1",
    "karma-mocha": "^1.3.0",
    "karma-rollup-preprocessor": "^7.0.5",
    "karma-sinon": "^1.0.5",
    "karma-sinon-chai": "^2.0.2",
    "karma-spec-reporter": "^0.0.32",
    "karma-tfs-reporter": "^1.0.2",
    "mocha": "^7.0.1",
    "nw-builder": "^3.5.7",
    "os": "^0.1.1",
    "postcss": "^8.2.13",
    "rollup": "^2.28.2",
    "rollup-plugin-vue": "^5.*.*",
    "rpm-builder": "^1.2.1",
    "run-script-os": "^1.1.3",
    "simple-git": "^3.5.0",
    "sinon": "^9.0.0",
    "sinon-chai": "^3.5.0",
    "targz": "^1.0.1",
    "temp": "^0.9.1",
    "through2": "^4.0.2",
    "vinyl-source-stream": "^2.0.0",
    "vue-loader": "^15.9.8",
    "vue-template-compiler": "^2.6.12",
    "yarn": "^1.22.17"
  },
  "optionalDependencies": {
    "appdmg": "^0.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
